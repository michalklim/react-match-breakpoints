{
  "name": "react-match-breakpoints",
  "version": "1.0.0",
  "description": "Lightweight and easy to use media query library for React 📱💻🖥️",
  "main": "dist/react-match-breakpoints.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/michalklim/react-match-breakpoints.git"
  },
  "bugs": {
    "url": "https://github.com/michalklim/react-match-breakpoints/issues"
  },
  "keywords": [
    "react",
    "responsive",
    "breakpoints",
    "matchMedia",
    "rwd"
  ],
  "scripts": {
    "build": "npm run dev && webpack --env.production",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "start": "npm run dev -- --watch --info-verbosity verbose",
    "dev": "webpack --env.development",
    "prettier": "prettier",
    "format": "npm run prettier -- --write '{,!(dist|examples)/**/}*.js'",
    "precommit": "lint-staged",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "prepublish": "npm run build",
    "release": "np"
  },
  "author": "Michal Klim <michal.wklim@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "react": "^15.0.0-0 || ^16.0.0-0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.1",
    "@commitlint/config-conventional": "^7.1.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.5",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.5.1",
    "enzyme-adapter-react-16": "^1.4.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.6.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-flowtype": "^2.50.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "0.14.3",
    "jest": "^23.5.0",
    "lint-staged": "4.3.0",
    "matchmedia-polyfill": "^0.3.1",
    "np": "^3.0.4",
    "prettier": "1.8.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "create-react-context": "^0.2.3",
    "eslint-plugin-prettier": "^2.6.2",
    "hoist-non-react-statics": "^3.0.1",
    "warning": "^4.0.2"
  },
  "lint-staged": {
    "{,!(dist|examples)/**/}*.js": [
      "npm run prettier -- --write",
      "git add"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>src/setupTests.js",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,jsx,mjs}"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/index.js",
      "<rootDir>/src/utils/index.js",
      "<rootDir>/src/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ]
  }
}
