{
  "name": "react-match-breakpoints",
  "version": "2.0.0-3",
  "description": "Lightweight and easy to use media query library for React üì±üíªüñ•Ô∏è",
  "main": "dist/react-match-breakpoints.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/michalklim/react-match-breakpoints.git"
  },
  "bugs": {
    "url": "https://github.com/michalklim/react-match-breakpoints/issues"
  },
  "keywords": [
    "react",
    "responsive",
    "breakpoints",
    "matchMedia",
    "rwd"
  ],
  "scripts": {
    "build": "webpack --env.mode production && tsc -b tsconfig.production.json",
    "debug": "node --inspect-brk ./node_modules/webpack/bin/webpack.js",
    "dev:debug": "npm run debug -- --env.mode development",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "start": "npm run dev -- --watch --info-verbosity verbose",
    "dev": "webpack --env.development",
    "prettier": "prettier",
    "format": "npm run prettier -- --write '{,!(dist|examples)/**/}*.js'",
    "prepublish": "npm run build",
    "version": "node scripts/bumpExamplesVersions.js",
    "check-types": "tsc",
    "release": "np"
  },
  "author": "Michal Klim <michal.wklim@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "react": ">= 16.8.0"
  },
  "devDependencies": {
    "@babel/core": "7.8.3",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.8.3",
    "@babel/preset-env": "7.8.3",
    "@babel/preset-react": "7.8.3",
    "@babel/preset-typescript": "7.8.3",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@storybook/react": "5.3.6",
    "@types/classnames": "^2.2.9",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "@types/storybook__react": "5.2.1",
    "@typescript-eslint/eslint-plugin": "2.16.0",
    "@typescript-eslint/parser": "2.16.0",
    "babel-loader": "8.0.6",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-loader": "3.0.3",
    "eslint-plugin-react": "7.18.0",
    "fork-ts-checker-webpack-plugin": "4.0.1",
    "html-webpack-plugin": "3.2.0",
    "husky": "4.0.10",
    "np": "^6.2.0",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "source-map-loader": "0.2.4",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "typescript": "3.7.5",
    "webpack": "4.41.5",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "3.10.1",
    "webpack-merge": "4.2.2"
  },
  "dependencies": {
    "create-react-context": "^0.2.3",
    "hoist-non-react-statics": "^3.0.1",
    "lodash": "^4.17.11",
    "warning": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>src/setupTests.js",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,jsx,mjs}"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/index.js",
      "<rootDir>/src/utils/index.js",
      "<rootDir>/src/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ]
  }
}
